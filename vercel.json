{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "FASTMCP_TRANSPORT": "http",
    "FASTMCP_HOST": "0.0.0.0",
    "PORT": "8000"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}
